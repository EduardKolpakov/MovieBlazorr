@inherits LayoutComponentBase

<HeadContent>
    <!-- Подключение Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <!-- Твои собственные стили -->
    <link href="css/main.css" rel="stylesheet" />
</HeadContent>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main class="w-100">
        <div class="top-row px-4 bg-light py-2 border-bottom d-flex justify-content-between align-items-center">
            <a href="https://learn.microsoft.com/aspnet/core/ " target="_blank" class="text-decoration-none">About</a>
        </div>

        <article class="content px-4 py-5">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    Произошла непредвиденная ошибка.
    <a href="." class="reload btn btn-sm btn-danger ms-2">Перезагрузить</a>
    <span class="dismiss btn-close float-end me-3"></span>
</div>